<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">
    <changeSet dbms="postgresql" author="emamontova@soylent.io" id="ignore-case-query-name-uniq">
        <dropUniqueConstraint tableName="query" constraintName="query_name_uniq" uniqueColumns="name"/>
        <sql>
            CREATE UNIQUE INDEX query_name_uniq ON query (LOWER(name));
        </sql>
        <comment>Modify query_name_uniq to ignore case.</comment>
    </changeSet>
    <changeSet dbms="h2" author="emamontova@soylent.io" id="ignore-case-query-name-uniq">
        <modifyDataType tableName="query" columnName="name" newDataType="VARCHAR_IGNORECASE"/>
    </changeSet>
</databaseChangeLog>
